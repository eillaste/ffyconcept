@model BLL.App.DTO.Nutrient

@{
    ViewData["Title"] = @Resources.Views.Shared._Layout.Details;
}

<h1>@Resources.Views.Shared._Layout.Details</h1>

<div>
    <h4>@Resources.Views.Shared._Layout.Nutrient</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StandardUnit)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StandardUnit!.Symbol)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">@Resources.Views.Shared._Layout.Edit</a> |
    <a asp-action="Index">@Resources.Views.Shared._Layout.Index</a>
</div>
