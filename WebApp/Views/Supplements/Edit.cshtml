@model WebApp.ViewModels.SupplementCreateEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Supplement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
