@model WebApp.ViewModels.FoodItemCreateEditViewModel

@{
    ViewData["Title"] = @Resources.Views.Shared._Layout.Edit;
}

<h1>@Resources.Views.Shared._Layout.Edit</h1>

<h4>@Resources.Views.Shared._Layout.FoodItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FoodItem.Title" class="control-label"></label>
                <input asp-for="FoodItem.Title" class="form-control" />
                <span asp-validation-for="FoodItem.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodItem.StandardUnitId" class="control-label"></label>
                <select asp-for="FoodItem.StandardUnitId" class="form-control" asp-items="Model.StandardUnitSelectList"></select>
                <span asp-validation-for="FoodItem.StandardUnitId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodItem.CategoryId" class="control-label"></label>
                <select asp-for="FoodItem.CategoryId" class="form-control" asp-items="Model.CategorySelectList"></select>
                <span asp-validation-for="FoodItem.CategoryId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="FoodItem.Id" />
            <div class="form-group">
                <input type="submit" value="@Resources.Views.Shared._Layout.Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Views.Shared._Layout.Index</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
