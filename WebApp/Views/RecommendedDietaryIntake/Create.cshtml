@using Domain.App
@model WebApp.ViewModels.RecommendedDietaryIntakeCreateEditViewModel

@{
    ViewData["Title"] = @Resources.Views.Shared._Layout.Create;
}

<h1>@Resources.Views.Shared._Layout.Create</h1>

<h4>@Resources.Views.Shared._Layout.RecommendedDietaryIntake</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RecommendedDietaryIntake.NutrientId" class="control-label"></label>
                <select asp-for="RecommendedDietaryIntake.NutrientId" class ="form-control" asp-items="Model.NutrientSelectList"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Upper age</label>
                <select asp-for="RecommendedDietaryIntake.AgeGroupId" class ="form-control" asp-items="Model.AgeGroupSelectList"></select>
            </div>
            <div class="form-group">
                <label asp-for="RecommendedDietaryIntake.Quantity" class="control-label"></label>
                <input asp-for="RecommendedDietaryIntake.Quantity" class="form-control" />
                <span asp-validation-for="RecommendedDietaryIntake.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecommendedDietaryIntake.Gender" class="control-label"></label>
                <select asp-for="RecommendedDietaryIntake.Gender" class="form-control" asp-items="Html.GetEnumSelectList<EGender>()"></select>
                <span asp-validation-for="RecommendedDietaryIntake.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Resources.Views.Shared._Layout.Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Views.Shared._Layout.Index</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
