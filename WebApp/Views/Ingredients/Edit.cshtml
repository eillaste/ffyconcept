@model WebApp.ViewModels.IngredientCreateEditViewModel

@{
    ViewData["Title"] = @Resources.Views.Shared._Layout.Edit;
}

<h1>@Resources.Views.Shared._Layout.Edit</h1>

<h4>@Resources.Views.Shared._Layout.Ingredient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
                <label asp-for="AppUserId" class="control-label"></label>
                <select asp-for="AppUserId" class="form-control" asp-items="ViewBag.AppUserId"></select>
                <span asp-validation-for="AppUserId" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Ingredient.FoodItem" class="control-label"></label>
                <select asp-for="Ingredient.FoodItemId" class="form-control" asp-items="Model.FoodItemSelectList"></select>
                <span asp-validation-for="Ingredient.FoodItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredient.Recipe" class="control-label"></label>
                <select asp-for="Ingredient.RecipeId" class="form-control" asp-items="Model.RecipeSelectList"></select>
                <span asp-validation-for="Ingredient.RecipeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredient.Quantity" class="control-label"></label>
                <input asp-for="Ingredient.Quantity" class="form-control" />
                <span asp-validation-for="Ingredient.Quantity" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Ingredient.Id" />
            <div class="form-group">
                <input type="submit" value="@Resources.Views.Shared._Layout.Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Views.Shared._Layout.Index</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
